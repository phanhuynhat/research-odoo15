<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <record id="school_information_list_view" model="ir.ui.view">
            <field name="name">school_info_list</field>
            <field name="model">school.information</field>
            <field name="arch" type="xml">
                <tree string="Danh sách trường">
                    <field name="name" optional="show"/>    
                    <field name="email" optional="show"/>
                    <field name="address" optional="show"/>
                    <field name="phoneNU" optional="show"/>
                    <field name="hasOnlineClass" optional="show"/>

                </tree>
            </field>
        </record>     


        <record id="school_information_form_view" model="ir.ui.view">
            <field name="name">school_info_form</field>
            <field name="model">school.information</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="type"/>
                            <field name="rank"/>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="hasOnlineClass" />
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="phoneNU" />
                            <field name="email" />
                            <field name="establishDay" />
                        </group>
                        <group>
                            <field name="document" filename="document_name" />
                            <field name="document_name" invisible="1"/>
                            <field name="document_name" />
                        </group>
                        <group>
                            <field name="class_list" optional="show" editable="bottom">
                                <tree>
                                    <field name="name" optional="show"/>    
                                    <field name="mainTeacher" optional="show"/>
                                    <field name="grade" optional="show"/>    

                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>    
            </field>   
        </record>

        <!-- Actions -->
        <record id="action_school_information" model="ir.actions.act_window">
            <field name="name">School Information Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">school.information</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new school for model
                </p>
            </field>
        </record>


      <!-- Top menu item -->

    <menuitem name="module" id="module.menu_root"/>

    <!-- menu categories -->

    <menuitem name="School" id="module.school" parent="module.menu_root"/>

<!-- actions -->

    <menuitem name="School Information" id="module.school_menu" parent="module.school"
              action="module.action_school_information"/>      
      
      
    </data>
</odoo>