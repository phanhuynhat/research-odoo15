<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
     
        <record id="student_information_list_view" model="ir.ui.view">
            <field name="name">student_info_list</field>
            <field name="model">student.information</field>
            <field name="arch" type="xml">
                <tree string="Danh sách học sinh">
                    <field name="name" optional="show"/>    
                    <field name="day_of_birth" optional="show"/>    
                    <field name="class_id" optional="show"/>
                    <field name="school_id" optional="show"/>
                </tree>
            </field>
        </record>


        <record id="student_information_form_view" model="ir.ui.view">
            <field name="name">student_info_form</field>
            <field name="model">student.information</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="day_of_birth"/>
                            <field name="class_id"/>
                            <field name="school_id" />
                        </group>
                        <group>
                            <field name= "subject_list" widget="many2many_checkboxes" string="Các môn học" help="Đây là danh sách các môn học của học sinh">
                               
                            </field>
                        </group>
                        
                    </sheet>
                </form>    
            </field>   
        </record>

        <!-- Actions -->
        <record id="action_student_information" model="ir.actions.act_window">
            <field name="name">student Information Action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.information</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new student for model
                </p>
            </field>
        </record>


      <!-- Top menu item -->

    <menuitem name="module" id="module.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Student" id="module.student" parent="module.menu_root"/>

    <!-- actions -->

    <menuitem name="Học sinh" id="module.student_menu" parent="module.student"
              action="module.action_student_information"/>      
      
      
    </data>
</odoo>